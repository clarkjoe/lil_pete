function cQueenie_TalkHandler(Character *theCharacter, CursorMode mode)
{
  if (!theCharacter.TalkHandler_Before())
    return;
  
  NotebookDialog.Update(theCharacter, dPrologue_QueenieCharacters, dPrologue_QueenieTopics);

  if (theCharacter.GetProperty("haveSpokenTo") == false)
  {
    cEgo.Say("Hello there. I'm Clara Bow.");
    theCharacter.Say("Yes, of course you are.");
    theCharacter.Say("I'm Marla P. Walker, but you can call me Queenie.");
    cEgo.Say("Have to say I admire you.");
    cEgo.Say("Can't imagine the nerve it takes to start your own production company.");
    theCharacter.Say("Thank you.");
    theCharacter.Say("It hasn't been easy, but it's been worth it.");
    
    theCharacter.SetProperty("haveSpokenTo",true);
    
    cEgo.ColorInCharacter(theCharacter);
    cJoanna.ColorInCharacter(theCharacter);
    cQueenie.ColorInCharacter(theCharacter);
    cCarlos.ColorInCharacter(theCharacter);
  }

  // EVERY OTHER TIME: jump straight into the notebook Q&A
  player.ChangeRoom(NOTEBOOK);
}

