// room script file


function room_LeaveRight()
{
  cEgo.ChangeRoom(4, 15, 134);
}

function room_LeaveLeft()
{
  cEgo.ChangeRoom(6, 157, 154);
}

function room_FirstLoad()
{
// Play the ambient noise when the room loads
aAirplane_hum.Play(eAudioPriorityNormal, eRepeat);
a6001_AirplaneMusic.Play(eAudioPriorityNormal, eRepeat);

}


function hHotspot1_Look(Hotspot *theHotspot, CursorMode mode)
{
  cEgo.Walk(62, 149, eBlock);
  cEgo.LockView(28);
  cEgo.x = 49;
  cEgo.y = 147;
  cEgo.Animate(0, 5, eOnce, eBlock);
  cEgo.UnlockView();
}

function hHotspot1_Interact(Hotspot *theHotspot, CursorMode mode)
{
  cEgo.Walk(62, 149, eBlock);
  cEgo.LockView(28);
  cEgo.x = 49;
  cEgo.y = 147;
  cEgo.Animate(0, 5, eOnce, eBlock);
  cEgo.UnlockView();
}


