function oEngineSwitch_Interact(Object *theObject, CursorMode mode)
{
  if (theObject.Graphic == 967)
  {
    theObject.Graphic = 968;
  }
  else
  {
    theObject.Graphic = 967;
    Wait(40);
    oEngineSwitch.Visible = false;
  }
}

