function cJoanna_TalkHandler(Character *theCharacter, CursorMode mode)
{
  if (!theCharacter.TalkHandler_Before())
    return;

  // always refresh these
  activeCharacterDialog = dPrologue_JoannaCharacters;
  activeSubjectDialog   = dPrologue_JoannaTopics;
  //activeEvidenceDialog = dPrologue_JoannaEvidence;
  currentNotebookContextID = theCharacter.ID;
  
  activeDialog = activeCharacterDialog;

  // FIRSTâ€‘TIME INTRO
  if (theCharacter.GetProperty("haveSpokenTo") == false)
  {
    // mark that we want to open the notebook when this dialog stops
    reopenNotebookOnDialogStop = true;

    // fire the intro in Joanna's room
    activeDialog.Start();

    return;
  }

  // EVERY OTHER TIME: jump straight into the notebook Q&A
  player.ChangeRoom(NOTEBOOK);
}

